<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tRestACLI"
        android:layout_width="344dp"
        android:layout_height="71dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="21dp"
        android:text=""
        android:textSize="30sp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="37dp" />

    <TextView
        android:id="@+id/tPromACLI"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="138dp"
        android:text=""
        android:textSize="24sp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="116dp" />

    <TextView
        android:id="@+id/tLatACLI"
        android:layout_width="334dp"
        android:layout_height="39dp"
        android:layout_alignStart="@+id/tPromACLI"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="176dp"
        android:text=""
        android:textSize="20sp"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="197dp" />

    <TextView
        android:id="@+id/tLonACLI"
        android:layout_width="335dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/bMapACLI"
        android:layout_alignParentTop="true"
        android:layout_marginTop="254dp"
        android:layout_marginEnd="-93dp"
        android:text=""
        android:textSize="20sp"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="267dp" />

    <Button
        android:id="@+id/bMapACLI"
        android:layout_width="137dp"
        android:layout_height="61dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-237dp"
        android:layout_marginTop="420dp"
        android:layout_toEndOf="@+id/tPromACLI"
        android:onClick="changeMap"
        android:text="Ver en Mapa"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="321dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="403dp"
        android:layout_height="407dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-384dp"
        android:layout_toStartOf="@+id/tLonACLI" />

</android.widget.RelativeLayout>